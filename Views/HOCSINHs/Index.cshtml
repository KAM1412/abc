@model PagedList.IPagedList<WebQuanLyLopHoc_Nhom8.Models.HOCSINH>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách học sinh</h2>

<p>
    @Html.ActionLink("Thêm học sinh", "Create")

    @using (Html.BeginForm())
    {
        <div style="margin-top:-50px;; margin-bottom:60px">
            <p style="padding-left:800px">
                Tìm học sinh:@Html.TextBox("searchstr")
                <input type="submit" value="Tìm kiếm" />
            </p>
        </div>
    }
    <table class="table">
        <tr>
            <th>
                Mã học sinh
            </th>
            <th>
                Tên học sinh
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Quê quán
            </th>
            <th>
                SĐT
            </th>
            <th>
                Hình ảnh
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaHS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenHS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QueQuan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhAnh)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaHS }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaHS }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaHS })
                </td>
            </tr>
        }
    </table>
</p>
<br />
<div style="text-align:center">Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount</div>
<div style="text-align:center">@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>

