@model PagedList.IPagedList<WebQuanLyLopHoc_Nhom8.Models.GIAOVIEN>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<h2>Danh sách giáo viên</h2>

<p>
    @Html.ActionLink("Thêm giáo viên", "Create")
    @using (Html.BeginForm())
    {
        <div style="margin-top:-50px; margin-bottom:60px">
            <p style="padding-left:850px">
                Tìm giáo viên:@Html.TextBox("searchstr")
                <input type="submit" value="Tìm kiếm" />
            </p>
        </div>
    }
</p>
<table class="table" style="margin-left:50px; text-align: center">
    <tr>
        <th>
            Tên giáo viên
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Quê quán
        </th>
        <th>
            SĐT
        </th>
        <th>
            Email
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Môn dạy
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenGV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QueQuan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HinhAnh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MONHOC.TenMH)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaGV }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaGV }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaGV })
            </td>
        </tr>
    }

</table>
<div style="text-align:center">Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount</div>
<div style="text-align:center">@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>

