@model WebQuanLyLopHoc_Nhom8.Models.LOPHOC

@{
    ViewBag.Title = "Create";
}

<h2>Thêm lớp mới</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Điền thông tin lớp học</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Tên lớp học: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLH, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <label>Khối: </label>
            <div class="col-md-10">
                @Html.DropDownList("MaKhoi", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KHOI.TenKhoi, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <label>Giáo viên chủ nhiệm: </label>
            <div class="col-md-10">
                @Html.DropDownList("MaGVCHUNHIEM", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GIAOVIEN.TenGV, "", new { @class = "text-danger" })
            </div>
        </div>
        <br /><hr /><br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
                <input type="reset" value="Xóa thông tin" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<br />
<div>
    @Html.ActionLink("Hủy", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
